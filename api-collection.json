{
  "info": {
    "name": "RekognizeVote API",
    "description": "Coleção de endpoints para o app RekognizeVote",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://api.rekognizevote.com",
      "type": "string"
    },
    {
      "key": "devUrl",
      "value": "https://dev-api.rekognizevote.com",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"João Silva\",\n  \"email\": \"joao@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Refresh Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refreshToken\": \"your_refresh_token_here\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "refresh"]
            }
          }
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Polls",
      "item": [
        {
          "name": "Get Polls - Active",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/polls?status=active",
              "host": ["{{baseUrl}}"],
              "path": ["polls"],
              "query": [
                {
                  "key": "status",
                  "value": "active"
                }
              ]
            }
          }
        },
        {
          "name": "Get Polls - Upcoming",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/polls?status=upcoming",
              "host": ["{{baseUrl}}"],
              "path": ["polls"],
              "query": [
                {
                  "key": "status",
                  "value": "upcoming"
                }
              ]
            }
          }
        },
        {
          "name": "Get Polls - Closed",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/polls?status=closed",
              "host": ["{{baseUrl}}"],
              "path": ["polls"],
              "query": [
                {
                  "key": "status",
                  "value": "closed"
                }
              ]
            }
          }
        },
        {
          "name": "Get Poll Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/polls/poll_id_here",
              "host": ["{{baseUrl}}"],
              "path": ["polls", "poll_id_here"]
            }
          }
        },
        {
          "name": "Get Poll Results",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/polls/poll_id_here/results",
              "host": ["{{baseUrl}}"],
              "path": ["polls", "poll_id_here", "results"]
            }
          }
        },
        {
          "name": "Validate Access Code",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/polls/poll_id_here/access?code=1234",
              "host": ["{{baseUrl}}"],
              "path": ["polls", "poll_id_here", "access"],
              "query": [
                {
                  "key": "code",
                  "value": "1234"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Voting",
      "item": [
        {
          "name": "Submit Vote",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"candidateId\": \"candidate_id_here\",\n  \"evidenceKey\": \"evidence_key_from_s3_upload\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/polls/poll_id_here/vote",
              "host": ["{{baseUrl}}"],
              "path": ["polls", "poll_id_here", "vote"]
            }
          }
        },
        {
          "name": "Get Presigned URL for Image Upload",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/upload/presigned-url?type=face_evidence",
              "host": ["{{baseUrl}}"],
              "path": ["upload", "presigned-url"],
              "query": [
                {
                  "key": "type",
                  "value": "face_evidence"
                }
              ]
            }
          }
        }
      ]
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Script para automaticamente definir o token de acesso após login",
          "if (pm.response && pm.response.json() && pm.response.json().accessToken) {",
          "    pm.collectionVariables.set('accessToken', pm.response.json().accessToken);",
          "}"
        ]
      }
    }
  ]
}